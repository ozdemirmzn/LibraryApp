@model Book

<table class="table thead-dark">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>ISBN</th>
        <th>Category</th>
        <th>Action</th>
    </tr>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Description</td>
        <td>@Model.ISBN</td>
        <td>@Model.Category</td>
        <td>
            <a asp-controller="Book" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </td>
    </tr>

</table>

@model List<LibraryApp.Models.Book>

<h1>Available books</h1>

@if (Model.Count == 0)
{
    <p>No books have found in inventory yet!</p>
}
else
{
    <div>
        <ul>
            @foreach (Book book in Model)
            {
                <li>
                    <a asp-controller="Book" asp-action="About" asp-route-id="@book.Id">@book.Name</a>
                </li>
            }
        </ul>
    </div>
}

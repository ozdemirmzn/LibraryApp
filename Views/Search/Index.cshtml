<div class="container body-content">

    <form asp-controller="Search" asp-action="Results" method="post">
 
        <div class="form-group">
            <label class="font-weight-bold" for="searchTerm">Keyword:</label>
            <input class="form-control" type="text" name="searchTerm" id="searchTerm" placeholder="Please enter part of the book name..."/>
        </div>

        <input class="btn btn-primary btn-lg" type="submit" value="Search" />
    </form>

    <hr />

    @if (ViewBag.books != null)
    {
        <table class="table table-striped thead-dark">
            <tr>
                <th>Name</th>
                <th>Barcode Number</th>
                <th>Library Address</th>
            </tr>

            @foreach (var book in ViewBag.books)
            {
        <tr>
            <td> <a asp-controller="Book" asp-action="About" asp-route-id="@book.Id">@book.Name</a></td>
            <td> @book.BarcodeNum</td>
            <td> @book.LibraryAddressStreet, @book.LibraryAddressCity, @book.LibraryAddressState @book.LibraryAddressZip</td>
            
        </tr>
            }
        </table>
    }


</div>

